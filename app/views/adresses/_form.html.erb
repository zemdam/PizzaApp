
<%= simple_form_for(@adress) do |f| %>
  <%= errors_for(@adress) %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :street_name %>
    <%= f.input :street_number %>
    <%= f.input :city %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
