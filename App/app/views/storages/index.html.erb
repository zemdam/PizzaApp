<h1>Storages</h1>

<%= form_tag storages_path, :method => 'get' do %>
  <%= hidden_field_tag :direction, params[:direction]%>
  <%= hidden_field_tag :sort, params[:sort]%>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table class="table table-striped table-hover table-sm">
  <thead>
    <tr>
      <th scope="col"><%= sortable "name", "Name" %> </th>
      <th scope="col"><%= sortable "available_cheese", "Available cheese" %> </th>
      <th scope="col"><%= sortable "available_ham", "Available ham" %> </th>
      <th scope="col"><%= sortable "available_sauce", "Available sauce" %> </th>
      <th scope="col"><%= sortable "available_pineapple", "Available pineapple" %> </th>
      <th scope="col"><%= sortable "pizzeria_points.name", "Pizzeria point" %> </th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @storages.each do |storage| %>
      <tr>
        <td><%= storage.name %></td>
        <td><%= storage.available_cheese %></td>
        <td><%= storage.available_ham %></td>
        <td><%= storage.available_sauce %></td>
        <td><%= storage.available_pineapple %></td>
        <td><%= storage.pizzeria_point.name %></td>
        <td><%= link_to 'Show', storage %></td>
        <td><%= link_to 'Edit', edit_storage_path(storage) %></td>
        <td><%= link_to 'Destroy', storage, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Storage', new_storage_path %>
